<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_weight="5">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/moodImgView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/mood_button"
                android:layout_gravity="top"
                android:contentDescription="mood" />
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/cream"
            android:text=""
            android:textSize="25sp"
            android:textStyle="bold" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/memoryCardView"
            android:elevation="20dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/purple_200">
            <ImageView
                android:id="@+id/memoryImgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/mood_button"
                android:contentDescription="memory"/>
            <TextView
                android:id="@+id/UIDTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/doodleCardView"
            android:elevation="20dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/purple_200"
            >
            <ImageView
                android:id="@+id/doodleImgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/mood_button"
                android:contentDescription="doodle" />
            <TextView
                android:id="@+id/gratitudeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="20dp"
                android:textColor="@color/cream"
                android:text=""
                />
        </androidx.cardview.widget.CardView>

    </TableRow>
</TableLayout>
