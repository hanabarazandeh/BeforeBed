<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="226dp"
            android:layout_height="223dp"
            android:background="@drawable/doodling1"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="doodle your feelings"
            android:textColor="@color/cream"
            android:fontFamily="@font/baloo"
            android:textSize="25dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="have you ever felt like capturing special moments, but they were too private to post on social media, or you didn't want them to get lost in your gallery? Before Bed helps you organize your memories like never before."
            android:textColor="@color/cream"
            android:textSize="15dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>